generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model user {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique // É boa prática marcar o email como único no banco
  phone     String?
  role      Role     @default(USER)
  documents String?  // Aqui você salvará a URL (file.location)
  s3Key     String?  // Adicione isso para salvar o caminho (file.key)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

}